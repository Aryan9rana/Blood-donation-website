<h1 id="writeus">Get in touch</h1>
<h4 style="text-align:center ;">write us a message</h4>
<div class="contact-form">
    <div id="form-contact">
        <input type="text" name="_honey" style="display:none">

        <input type="hidden" name="_captha" value="false">
        <p>
            <label>Name*</label>
            <input type="text" name="name" id="form-name" required>
        </p>
        <p>
            <label>Email Adress*</label>
            <input type="email" name="email" id="form-email" required>
        </p>
        <p>
            <label>Phone Number</label>
            <input type="tel" name="phone" id="form-phone">
        </p>
        <p>
            <label>Affair</label>
            <input type="text" name="subject" id="form-subject">
        </p>
        <p class="block">
           <label>Message</label> 
            <textarea name="message" rows="3" id="form-desc"></textarea>
        </p>
        <p class="block">
            <button id="form-btn" onclick="sendMail()" type="submit">
                Send
            </button>
        </p>
    </div>
</div>

  </body>
